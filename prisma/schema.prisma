generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String
  name   String
  partys Party[]
}

model Pokemon {
  id        Int     @id
  name      String
  types     Type[]
  avatarUrl String
  Party     Party[]
}

model Type {
  id       Int
  name     String    @unique
  url      String
  pokemons Pokemon[]

  @@id([name])
}

model Party {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  title     String
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  pokemons  Pokemon[]
}
