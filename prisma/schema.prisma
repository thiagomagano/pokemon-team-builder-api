generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id     Int     @id @default(autoincrement())
  email  String
  name   String
  partys Party[]
}

model Pokemon {
  id        Int    @id
  name      String
  type      Type[]
  avatarUrl String
  Party     Party? @relation(fields: [partyId], references: [id])
  partyId   Int?
}

model Type {
  id        Int      @id
  name      String
  Pokemon   Pokemon? @relation(fields: [pokemonId], references: [id])
  pokemonId Int?
}

model Party {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  title     String
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @unique
  pokemons  Pokemon[]
}
